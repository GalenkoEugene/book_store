%td
  .input-group
    = link_to order_item_path(id: order_item.id, order_item: {quantity: order_item.quantity-1}), class: 'input-link', method: :put, remote: true do
      %i.fa.fa-minus.line-height-40
    %input.form-control.quantity-input{type: 'text', value: order_item.quantity}
    = link_to order_item_path(id: order_item.id, order_item: {quantity: order_item.quantity+1}), class: 'input-link', method: :put, remote: true do
      %i.fa.fa-plus.line-height-40
