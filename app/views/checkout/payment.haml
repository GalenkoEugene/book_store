%main.container.mb-res-50
  = render 'checkout/progress'
  %h3.general-subtitle Credit Card
  = form_for @credit_card, url: wizard_path, method: :put, remote: true, html: { class: 'max-600 mb-80' } do |f|
    .form-group
      = f.label :number, 'Card Number', class: 'control-label input-label'
      = f.text_field :number, class: 'form-control', placeholder: 'Card Number'
      %span.help-block Please enter a valid credit card number
    .row
      .col-sm-6
        .form-group
          = f.label :name, 'Name on Card', class: 'control-label input-label'
          = f.text_field :name, class: 'form-control', placeholder: 'Name on Card'
          %span.help-block
      .col-sm-3
        .form-group
          = f.label :mm_yy, 'MM / YY', class: 'control-label input-label'
          = f.text_field :mm_yy, class: 'form-control', placeholder: 'MM / YY'
          %span.help-block
      .col-sm-3
        .form-group.relative
          = f.label :cvv, 'CVV', class: 'control-label input-label'
          = f.text_field :cvv, class: 'form-control', placeholder: 'CVV'
          %span.help-block
          %i.fa.fa-question-circle.general-form-help{'data-toggle': 'tooltip', 'data-placement': :top, title: t('credit_card.tooltip')}
    = render 'checkout/order_summary'
    = f.submit 'Save and Continue', class: 'btn btn-default center-block mb-80'
